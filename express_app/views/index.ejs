<!DOCTYPE html>

<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

            <div class="blogs content">
                <h2>All Blogs</h2>
                <% if (blogs.length> 0) {%>
                    <% blogs.forEach(blog=> { %>
                        <a class="single" href="/blogs/get_blog_post/<%= blog._id %>">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                            <p class="body">
                                <%= blog.body %>
                            </p>
                        </a>
                        <br>
                        <% }) %>
                            <% } else { %>
                                <p>No blog is available</p>
                                <% } %>
            </div>
            <%- include('./partials/footer.ejs') %>

    </body>

</html>